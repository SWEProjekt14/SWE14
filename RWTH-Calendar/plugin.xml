<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.plugin.calendar" 
		version="0.1.0">
    <name>Calendar</name>
    <description>Sample PhoneGap Calendar Plugin</description>
    <license>RWTH</license>
    <keywords>phonegap,calendar</keywords>


    <js-module src="www/calendar.js" name="Calendar">
        <clobbers target="window.calendar" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Calendar">
                <param name="android-package" value="com.plugin.calendar.java"/>
            </feature>
        </config-file>

        <source-file src="src/android/Calendar.java" target-dir="src/com/plugin/calendar" />
     </platform>
</plugin>
